<div class="article" id="<%= article.id %>">
  <div class="front">
    <%= link_to article, class: 'pic-link' do %>
      <%= image_tag article.image.url(:square) %>
    <% end %>
  </div>

  <div class="back">
    <span class="article-name"><%= article.name %></span>
    <div class="actions">
      <%= link_to 'Show', article %>
      <%= link_to 'Edit', edit_article_path(article) %>
      <%= link_to 'Delete', article, confirm: 'Are you sure you want to lose a friend?', method: :delete, class: 'destroy' %>
    </div>
  </div>
</div>