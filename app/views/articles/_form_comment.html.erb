 <%= form_for @comment, url: comments_path, remote: true do |f| %>
        <%= f.hidden_field :article_id, value: @article.id %>
        <br/>
        <%= f.label :content %>
        <%= f.text_area :content, class: "comment", cols: 20, rows: 5 %>
        <br/>
        <%= f.submit :submit, class: "btn btn-primary" %>
    <% end %>