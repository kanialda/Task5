<div class="container">
  <div id="main-content">
    <br>    <br />
<%= form_for @user do |f| %>
  <div class="form-group">
<%= f.label :username %>
<%= f.text_field :username, class: "form-control" %>
<%= @user.errors[:username].first unless @user.errors[:username].blank? %>
<br/>
<%= f.label :email %>
<%= f.text_field :email, class: "form-control" %>
<%= @user.errors[:email].first unless @user.errors[:email].blank? %>
<br/>
<%= f.label :password %>
<%= f.password_field :password, class: "form-control" %>
<%= @user.errors[:password].first unless @user.errors[:password].blank? %>
<br/>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, class: "form-control" %>
<%= @user.errors[:password_confirmation].first unless
@user.errors[:password_confirmation].blank? %>
<br/>
<%= f.submit :submit, class: "btn btn-default" %>
<% end %>
</div>
</div>
</div>
